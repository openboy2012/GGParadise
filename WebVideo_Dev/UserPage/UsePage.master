    <script type="text/javascript">
        function HoverLi(n) {
            $(".hover").removeClass("hover");
            $("#nav_" + n).find("a").addClass("hover");            
        }

        function showloginDiv() {
            $("#bg").show();
            $("#loginDivMain").show();
        }
        function closeloginDiv() {
            $("#loginDivMain").hide();
            $("#bg").hide();
        }
        var opts = null;
        function checkUser() {
            uid = $("#<%=username.ClientID %>").val();
            pwd = $("#<%=password.ClientID %>").val();
            if (uid == "") {
                $("#<%=username.ClientID %>").addClass("ler");
                return false;
            }
            else {
                $("#<%=username.ClientID %>").removeClass("ler");
            }
            if (pwd == "") {
                $("#<%=password.ClientID %>").addClass("ler");
                return false;
            } else {
                $("#<%=password.ClientID %>").removeClass("ler");
            }
            return true;
        }

        function check() {
            uid = $("#<%=username.ClientID %>").val();
            pwd = $("#<%=password.ClientID %>").val();
            if (uid == "") {
                $("#<%=username.ClientID %>").addClass("ler");
                alert('用户名不能为空');
                return false;
            }
            else {
                $("#<%=username.ClientID %>").removeClass("ler");
            }
            if (pwd == "") {
                $("#<%=password.ClientID %>").addClass("ler");
                alert('密码不能为空');
                return false;
            } else {
                $("#<%=password.ClientID %>").removeClass("ler");
            }
            return true;
        }
    </script>

